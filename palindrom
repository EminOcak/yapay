function isPalindrome(word) {
  var reversedWord = word.split('').reverse().join('');
  if (word === reversedWord) {
    return true;
  } else {
    return false;
  }
}

var input = prompt("Bir kelime girin: ");
if (isPalindrome(input.toLowerCase())) {
  console.log(input + " bir palindromdur.");
} else {
  console.log(input + " bir palindrom deÄŸildir.");
}
